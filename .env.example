# Chromecast音量制御の設定

# 制御対象のChromecastデバイス名
# ネットワーク上のChromecastのfriendly_nameを指定してください
CHROMECAST_NAME="Your Chromecast Name"

# 音量を下げるステップ幅（負の値）
# 例: -0.04 = 4%ずつ下げる
STEP=-0.04

# 最小音量レベル（0.0～1.0）
# この値に達するとデフォルト音量に戻してスタンバイモードになります
MIN_LEVEL=0.3

# 音量調整の間隔（秒）
# 1200 = 20分
INTERVAL_SEC=1200

# 最小音量到達後に設定する音量（0.0～1.0）
DEFAULT_VOLUME=0.5